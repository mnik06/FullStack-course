    "@fastify/helmet": "^13.0.1",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.1",
    "@sendgrid/mail": "^8.1.4",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.38.4",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "pg": "^8.13.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.1"
