    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:migration:run": "npx drizzle-kit migrate",
    "db:migration:generate": "npx drizzle-kit generate",
    "db:migration:studio": "npx drizzle-kit studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
